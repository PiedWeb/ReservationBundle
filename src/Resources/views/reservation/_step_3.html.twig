<h2 class="mb-20">S'inscrire</h2>

<div class="text-left" style="max-width:250px; margin:auto; padding-top:20px; padding-bottom: 20px;">

{{ form_start(form) }}

    <div class="form-group">
         {{ form_row(form.lastname, {
                label: 'Nom',
                attr: {
                    class: "form-control",
                }
            }) }}
    </div>

    <div class="form-group">
         {{ form_row(form.firstname, {
                label: 'Prénom',
                attr: {
                    class: "form-control",
                }
            }) }}
    </div>

    <div class="form-group">
         {{ form_row(form.dateOfBirth, {
                label: 'Date de naissance',
                attr: {
                    class: "form-control",
                }
            }) }}
    </div>

    <div class="form-group">
         {{ form_row(form.phone, {
                label: 'Téléphone',
                attr: {
                    class: "form-control",
                }
            }) }}
    </div>

    <div class="form-group">
         <label for="form_city">Ville <small>(de votre résidence principale)</small></label>
         {{ form_row(form.city, {
                label: false,
                attr: {
                    class: "form-control",
                }
            }) }}
    </div>

    {% if form.email is defined %}
        <div class="form-group">
             {{ form_row(form.email, {
                    label: 'Email',
                    attr: {
                        class: "form-control",
                    }
                }) }}
        </div>

        <div class="form-group">
             {{ form_row(form.plainPassword, {
                    label: 'Mot de Passe',
                    attr: {
                        class: "form-control",
                    }
                }) }}
        </div>
    {% endif %}

    <div class="">
      <button type="submit" class="btn btn-info">Valider</button>
    </div>
</div>
<div class="d-none">{{ form_rest(form) }}</div>

{{ form_end(form) }}
